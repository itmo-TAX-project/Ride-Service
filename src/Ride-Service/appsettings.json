{
  "Kestrel": {
    "Endpoints": {
      "gRPC": {
        "Url": "http://0.0.0.0:8060",
        "Protocols": "Http2"
      }
    }
  },
  "Grpc": {
    "RouteServiceAddress": "http://route-service"
  },
  "DistanceOptions": {
    "EarthRadiusMeters": 6371000
  },
  "RidePoints": {
    "PickupArrivalMeters": 50,
    "DropoffArrivalMeters": 50
  },
  "Postgres": {
    "Host": "localhost",
    "Port": 5600,
    "Database": "postgres",
    "Username": "postgres",
    "Password": "postgres",
    "SslMode": "Prefer"
  },
  "MessagePersistence": {
    "SchemaName": "message_persistence",
    "Publisher": {
      "Default": {
        "BatchSize": 10,
        "PollingDelay": "00:00:00.500"
      }
    }
  },
  "Kafka": {
    "Host": "localhost:8001",
    "Producers": {
      "RideAssignedMessage": {
        "Topic": "ride_assigned",
        "Outbox": {
          "BatchSize": 100,
          "PollingDelay": "00:00:00.500"
        }
      },
      "RideCancelledMessage": {
        "Topic": "ride_cancelled",
        "Outbox": {
          "BatchSize": 100,
          "PollingDelay": "00:00:00.500"
        }
      },
      "RideCompletedMessage": {
        "Topic": "ride_completed",
        "Outbox": {
          "BatchSize": 100,
          "PollingDelay": "00:00:00.500"
        }
      },
      "RideRequestedMessage": {
        "Topic": "ride_requested",
        "Outbox": {
          "BatchSize": 100,
          "PollingDelay": "00:00:00.500"
        }
      },
      "RideStartedMessage": {
        "Topic": "ride_started",
        "Outbox": {
          "BatchSize": 100,
          "PollingDelay": "00:00:00.500"
        }
      }
    },
    "Consumers": {
      "RideAssignationFailedMessage": {
        "IsDisabled": false,
        "Topic": "ride_assignation_failed",
        "Group": "Ride-Service",
        "Inbox": {
          "BatchSize": 10,
          "PollingDelay": "00:00:00.500"
        }
      },
      "RideAssignedMessage": {
        "IsDisabled": false,
        "Topic": "ride_assigned",
        "Group": "Ride-Service",
        "Inbox": {
          "BatchSize": 10,
          "PollingDelay": "00:00:00.500"
        }
      }
    }
  }
}